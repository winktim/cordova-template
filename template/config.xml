<?xml version='1.0' encoding='utf-8'?>
<widget id="{{ package }}" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>{{ name }}</name>
    <description>
      {{ description }}
    </description>
    <author email="{{ author }}@divtec.ch" href="https://divtec.ch">
      {{ author }}
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <!-- build webpack avant de compiler cordova -->
    <hook type="before_compile" src="build/build.js"/>

    <!-- plugins -->
    <plugin name="cordova-plugin-whitelist" spec="1" />
</widget>
